{
  "expo": {
    "name": "attend-me-app",
    "slug": "attend-me-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/college-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "experiments": {
      "typedRoutes": false
    },
    "updates": {
      "enabled": false
    },
    "splash": {
      "image": "./assets/college-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mrce.attendme",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to detect student devices for attendance tracking.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to detect student devices for attendance tracking."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/android/college-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.mrce.attendme",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "react-native-ble-plx",
      "@react-native-community/datetimepicker",
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "b90a85e6-974d-48c9-9b73-42c2237febee"
      }
    },
    "owner": "pj2256"
  }
}
